
namespace mix {

    inline Byte Instrument::get_address_register_index(const Word& encoded_instrument) {
        return encoded_instrument.get_byte(3);
    }

    inline Byte Instrument::get_field(const Word& encoded_instrument) {
        return encoded_instrument.get_byte(4);
    }

    inline Byte Instrument::get_code(const Word& encoded_instrument) {
        return encoded_instrument.get_byte(5);
    }
}
