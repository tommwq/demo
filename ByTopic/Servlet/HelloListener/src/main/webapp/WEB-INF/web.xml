<?xml version="1.0" encoding="UTF-8"?>  
<web-app version="2.5"   
	 xmlns="http://java.sun.com/xml/ns/javaee"  
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   
	 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<servlet>
		<servlet-name>HelloListener</servlet-name>
		<servlet-class>HelloListener.HelloListener</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>HelloListener</servlet-name>
		<url-pattern>/HelloListener</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>HelloListener.SessionListener</listener-class>
	</listener>
</web-app>  
